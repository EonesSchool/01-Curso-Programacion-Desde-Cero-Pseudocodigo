Algoritmo numeroNegativo
	
	// Definir Variables
	Definir numeroUsuario Como Real;
	
	// Inicialización
	Escribir "Ingrese Un Valor Numérico: ";
	Leer numeroUsuario;
	
	// Condicional Simple
	Si numeroUsuario < 0 Entonces
		Escribir "El Valor Ingresado Es Negativo";
		Escribir "El Número Ingresado Es: ", numeroUsuario;
	FinSi
	
FinAlgoritmo
