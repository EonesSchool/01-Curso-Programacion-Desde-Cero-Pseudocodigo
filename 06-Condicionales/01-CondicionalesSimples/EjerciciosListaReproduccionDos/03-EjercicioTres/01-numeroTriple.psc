Algoritmo numeroTriple
	
	// Definir Variables O Constantes
	Definir numeroUsuario, numeroFinal Como Real;
	
	// Inicialización De Variables O Constantes
	Escribir "Ingrese Un Valor Numérico: ";
	Leer numeroUsuario;
	
	// Estructura Condicional Simple
	Si (numeroUsuario >= 10) Entonces
		numeroFinal = numeroUsuario * 3;
		
		Escribir "";
		Escribir "El Valor Ingresado Es: ", numeroUsuario;
		Escribir "El Valor Triplicado Es: ", numeroFinal;
	FinSi
	
	
	
	
FinAlgoritmo
