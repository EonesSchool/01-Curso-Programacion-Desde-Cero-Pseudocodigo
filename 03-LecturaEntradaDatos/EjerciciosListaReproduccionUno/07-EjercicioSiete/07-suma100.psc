Algoritmo suma100
	
	// Definir Variables O Constantes
	Definir numeroUsuario, numeroFinal Como Real;
	
	// Inicialización De Variables O Constantes
	Escribir "Ingrese Un Valor Numérico: ";
	Leer numeroUsuario;
	
	numeroFinal = numeroUsuario + 100;
	
	// Mostrar Información
	Escribir "";
	Escribir "Número Usuario: ", numeroUsuario;
	Escribir "Valor Final: ", numeroFinal;
	
FinAlgoritmo
