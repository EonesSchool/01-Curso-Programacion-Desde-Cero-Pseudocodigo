Algoritmo sumarNumeros
	
	// Definir Constantes Y Variables
	Definir VALOR_UNO Como Real;
	Definir VALOR_DOS Como Real;
	Definir suma Como Real;
	
	// Inicialización De Las Constantes Y Variables
	VALOR_UNO = 15;
	VALOR_DOS = 12;
	
	// Proceso Aritmético
	suma = VALOR_UNO + VALOR_DOS;
	
	// Mostrar Información
	Escribir "La Suma De Los Dos Números Es: ", suma;
	
FinAlgoritmo
